                        <td><input type="text" name="NewReagents[0].ChemicalFormula"  required></td>
                        <td><input type="number" id="Mass" step="0.01" min="0" name="NewReagents[0].Mass"  required></td>
                        <td><input type="date" name="NewReagents[0].DateOfManufacture" required></td>
                        <td><input type="text" name="NewReagents[0].series"  required></td>
                        <td><input type="number" id="Purity" step="0.01" name="NewReagents[0].PurityDegree" min="0" max="100" required></td>
                        <td>
                            <select name="NewReagents[0].PurityClassification" required>
                                <option value=1>Технический</option>
                                <option value=2>Чистый</option>
                                <option value=3>Чистый для анализа</option>
                                <option value=4>Химически чистый</option>
                                <option value=5>Спектрально чистый</option>
                                <option value=6>Особо чистый</option>
                            </select>
                        </td>
                        <td>
                            <select name="NewReagents[0].idManufacture" onchange="toggleProductionFields(this)">
                                <option value=null>Нет производства</option>
                                <option value=1>АО ХимПродукт</option>
                                <option value=2>ООО ХимТехнологии</option>
                                <option value=3>БелХимПром</option>
                                <option value=4>Институт Химических Реактивов</option>
                                <option value=5>НПФ Реактив</option>
                                <option value=6>ТОВ ХимЛаб</option>
                                <option value=7>КазХимТрейд</option>
                                <option value=8>УзХимСнаб</option>
                                <option value=9>ООО РеактивПром</option>
                                <option value=10>АрмХимТех</option>
                            </select>

                        <div class="production-details" style="display: none;">
                            <input type="text" name="NewReagents[0].SupplierName" placeholder="Название поставщика">
                            <input type="email" name="NewReagents[0].SupplierMail" placeholder="Эл. почта поставщика">
                            <input type="tel" name="NewReagents[0].SupplierPhone" placeholder="Телефон поставщика">
                            </div>
                        </td>
                        <td class="action-buttons">
						<!--<button type="button" class="update">Обновить</button>-->
                            <button type="button" class="delete" onclick="deleteRow(this)">Удалить</button>
                        </td>
                    </tr>
            </tbody>
        </table>
    </form>

    <script>

        function addRow() {
            const tableBody = document.getElementById("reagentTableBody");
            const rowCount = tableBody.rows.length;
            const newRow = tableBody.rows[0].cloneNode(true);

            newRow.querySelectorAll("input, select").forEach((input) => {
                input.value = ""; // Сбрасываем значение для новых записей
                const name = input.getAttribute("name");
                if (name) {
                    input.setAttribute("name", name.replace(/\[\d+\]/, `[${rowCount}]`)); // Меняем индекс
                }
            });

            tableBody.appendChild(newRow);
        }

        function deleteRow(button) {
            const row = button.closest("tr");
            row.remove();
        }

        function toggleProductionFields(select) {
            const row = select.closest("tr");
            const productionDetails = row.querySelector(".production-details");
            const supplierDetails = row.querySelector(".supplier-details");

            if (select.value === "manual") {
                productionDetails.style.display = "block";
                supplierDetails.style.display = "block";
            } else if (select.value) {
                productionDetails.style.display = "block";
                supplierDetails.style.display = "none";
            } else {
                productionDetails.style.display = "none";
                supplierDetails.style.display = "none";
            }
        }

