        <footer>
            &copy; Дмитрий. All rights reserved. | Designed: <a href="@Url.Page("/Authorised/User")">Ручками</a><!---->
        </footer>

    </div>

    @* Частичное подключение для скриптов *@
    @await Html.PartialAsync("ScriptsPartial")

    <script>
        // Получаем элемент select
        const tableSelector = document.getElementById('tableSelector');
        tableSelector.addEventListener('change', function () {
            const selectedUrl = tableSelector.value; // Получаем выбранное значение (URL)
            if (selectedUrl) { // Если URL не пустой
                window.location.href = selectedUrl; // Переходим на выбранную страницу
            }
        });

        const automitizationSelector = document.getElementById('automitizationSelector');
        automitizationSelector.addEventListener('change', function () {
            const selectedUrl = automitizationSelector.value; // Получаем выбранное значение (URL)
            if (selectedUrl) { // Если URL не пустой
                window.location.href = selectedUrl; // Переходим на выбранную страницу
            }
        });
    </script>
</body>
</html>
