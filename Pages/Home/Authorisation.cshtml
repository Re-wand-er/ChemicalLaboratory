<div class="centered">
    <div class="mycontainer">
        <h1>Авторизация</h1>
        <form id="login-form" method="post">
            
            <label for="login">Логин:</label>
            <input type="text" id="login" name="login" asp-for="Login" required>

			<div id="login-fields" class="visible">
                <label for="password">Пароль:</label>
                <input type="password" id="password" name="password" asp-for="Password" >

                <a id="show-password-recovery" href="#">Восстановить пароль</a>

                <button type="submit" asp-page-handler="AuthorisationCheck">Войти</button>
            </div>

            <div id="recovery-fields" class="hidden">
                <label for="email">Почта:</label>
                <input type="email" id="email" asp-for="Email" placeholder="Введите вашу почту" >
                
                <label for="NewPassword">Новый пароль:</label>
                <input type="password" id="NewPassword" asp-for="NewPassword" placeholder="Введите ваш новый пароль" >

                <button type="submit" id="send-code" asp-page-handler="MessageCode">Прислать код</button>

                <label for="authCode">Код подтверждения:</label>
                <input type="text" id="authCode" asp-for="Code" placeholder="Введите код" >

                <a id="back-to-login" href="#">Вернуться к авторизации</a>

                
                <button type="submit" asp-page-handler="NewPassword">Сменить пароль</button>
            </div>

		</form>
        
        <h3 class="error-message">@Model.ErrorMessage</h3>

        <div class="register-link">
            <a href="@Url.Page("/Home/Registration")" id="show-registration">Зарегистрироваться</a>
        </div>
    </div>
</div>
<script>

    document.getElementById('show-password-recovery').addEventListener('click', function (event) {
        event.preventDefault();
        document.getElementById('login-fields').classList.remove('visible');
        document.getElementById('login-fields').classList.add('hidden');
        document.getElementById('recovery-fields').classList.remove('hidden');
        document.getElementById('recovery-fields').classList.add('visible');
    });
    
    document.getElementById('back-to-login').addEventListener('click', function (event) {
        event.preventDefault();
        document.getElementById('recovery-fields').classList.remove('visible');
        document.getElementById('recovery-fields').classList.add('hidden');
        document.getElementById('login-fields').classList.remove('hidden');
        document.getElementById('login-fields').classList.add('visible');
    });


</script>
