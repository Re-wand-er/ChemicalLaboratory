        </form>
	</div>
	<form method="get">
        <table>
        
            <tr>
                <th width="15">Имя</th>
                <th width="20">Фамилия</th>
		    	<th>Отчество</th>
		    	<th width="10">Пол</th>
                <th>Почта</th>
                <th>Должность</th>
                <th width="7">Рабочая смена</th>
                <th width="15">Начало работы</th>
                <th width="15">Конец работы</th>
                @if (User.IsInRole("Администратор"))
                {
                    <th>Системная роль</th>
                    <th>Логин</th>
                    <!--<th>Хэш-Пароль</th>-->
                    <th>Действия</th>
                }
            </tr>

            @foreach (var product in Model.PeopleList)
            {
                <tr>
                    <td>@product.FirstName</td>
                    <td>@product.MiddleName</td>
		    		<td>@product.LastName</td>
		    		<td>@product.Sex</td>
		    		<td>@product.Email</td>
                    <td>@product.JobPosition</td>
                    <td>@product.IdWorkShedule.WorkShift</td>
                    <td>@product.IdWorkShedule.StartTime</td>
                    <td>@product.IdWorkShedule.EndTime</td>
                    @if (User.IsInRole("Администратор"))
                    {
                        <td>@product.SystemRole</td>
                        <td>@product.Login</td>
                       <!--<td>@product.Password</td>-->
                    }
                

                @if (User.IsInRole("Администратор"))
                {
                    <td class="action-buttons">
                        <button type="button" name="Update" class="update" value=@product.IdPeople onclick="editRow(this)">Изменить</button>
                        <button type="submit" name="Delete" class="delete" value=@product.IdPeople>Удалить</button>
                    </td>
                }
                </tr>
            }

		</table>
	</form>
    <script>

        function editRow(button) {
            const row = button.closest('tr'); // Находим строку таблицы
            const cells = row.querySelectorAll('td:not(.action-buttons)'); // Находим все ячейки в строке, исключая ячейки с действиями

            // Преобразуем каждую ячейку в поле для ввода или выпадающий список
            cells.forEach((cell, index) => {
                const currentValue = cell.textContent.trim();

                if (index === 7 || index === 8) { 
                    return; 
                }

                // Если индекс соответствует столбцу "Пол", создаем выпадающий список
                if (index === 3) { // Предполагаем, что "Пол" находится в 4-м столбце (индекс 3)
                    const selectElement = document.createElement('select');
                    const options = [
                        { value: 'М', text: 'М' },
                        { value: 'Ж', text: 'Ж' }
                    ];

                    options.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = option.value;
                        optionElement.textContent = option.text;
                        if (option.text === currentValue) {
                            optionElement.selected = true; // Устанавливаем текущее значение
                        }
                        selectElement.appendChild(optionElement);
                    });

                    cell.innerHTML = ''; // Очищаем содержимое ячейки
                    cell.appendChild(selectElement); // Добавляем выпадающий список
                } 
                else if (index === 5) { // должность
                    const selectElement = document.createElement('select');
                    const options = [
                        { value: 'Биотехнолог', text: 'Биотехнолог' },
                        { value: 'Исследователь', text: 'Исследователь' },
                        { value: 'Лаборант', text: 'Лаборант' },
                        { value: 'Лабораторный техник', text: 'Лабораторный техник' },
                        { value: 'Научный сотрудник', text: 'Научный сотрудник' },
                        { value: 'Химик', text: 'Химик' }
                    ];

                    options.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = option.value;
                        optionElement.textContent = option.text;
                        if (option.text === currentValue) {
                            optionElement.selected = true; // Устанавливаем текущее значение
                        }
                        selectElement.appendChild(optionElement);
                    });

                    cell.innerHTML = ''; // Очищаем содержимое ячейки
                    cell.appendChild(selectElement); // Добавляем выпадающий список
                }
                else if (index === 6) { // Рабочая смена
                    const selectElement = document.createElement('select');
                    const options = [
                        { value: 1, text: 'Утро' },
                        { value: 2, text: 'Вечер' },
                        { value: 3, text: 'Ночь' }
                    ];

                    options.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = option.value;
                        optionElement.textContent = option.text;
                        if (option.text === currentValue) {
                            optionElement.selected = true; // Устанавливаем текущее значение
                        }
                        selectElement.appendChild(optionElement);
                    });

                    cell.innerHTML = ''; // Очищаем содержимое ячейки
                    cell.appendChild(selectElement); // Добавляем выпадающий список
                }
                else if (index === 9) { // системная роль
                    const selectElement = document.createElement('select');
                    const options = [
                        { value: 'Пользователь', text: 'Пользователь' },
                        { value: 'Администратор', text: 'Администратор' }
                    ];

                    options.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = option.value;
                        optionElement.textContent = option.text;
                        if (option.text === currentValue) {
                            optionElement.selected = true; // Устанавливаем текущее значение
                        }
                        selectElement.appendChild(optionElement);
                    });

                    cell.innerHTML = ''; // Очищаем содержимое ячейки
                    cell.appendChild(selectElement); // Добавляем выпадающий список
                }
                else {
                    // Для всех остальных ячеек создаем поле для ввода
                    const inputElement = document.createElement('input');
                    inputElement.type = 'text';
                    inputElement.value = currentValue;
                    cell.innerHTML = '';
                    cell.appendChild(inputElement);
                }
            });

            // Меняем текст на кнопке "Изменить" на "Сохранить"
            button.textContent = "Сохранить";
            button.onclick = () => saveRow(button); // При клике на "Сохранить" вызываем метод saveRow
        }

        function saveRow(button) {
            const row = button.closest('tr'); // Находим строку таблицы
            const cells = row.querySelectorAll('td:not(.action-buttons)'); // Находим все ячейки в строке, исключая кнопки действий
            const updatedValues = [];

            // Получаем обновленные значения из полей ввода или выпадающего списка
            cells.forEach((cell, index) => {
                // Пропускаем столбцы 7 и 8 (индексация: 6 и 7)
                if (index === 7 || index === 8) {
                    updatedValues.push(cell.textContent.trim()); // Добавляем текущее значение
                    return; // Пропускаем обработку
                }

                const input = cell.querySelector('input, select');
                if (input) {
                    if (input.tagName === 'SELECT') {
                        updatedValues.push(input.value.trim()); // Для <select> добавляем значение
                        cell.textContent = input.options[input.selectedIndex].text; // Возвращаем текст из выбранного значения
                    } else if (input.tagName === 'INPUT') {
                        updatedValues.push(input.value.trim()); // Для <input> добавляем значение
                        cell.textContent = input.value.trim(); // Возвращаем обновленное значение в ячейку
                    }
                } else {
                    updatedValues.push(cell.textContent.trim()); // Если ячейка не редактировалась
                }
            });
            
            // Отправляем обновленные данные на сервер
            const idPeople = button.value; // ID пользователя из кнопки

            fetch('/Home/People', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    IdPeople: idPeople,
                    FirstName: updatedValues[0], 
                    MiddleName: updatedValues[1], 
                    LastName: updatedValues[2],  
                    Sex: updatedValues[3],       
                    email: updatedValues[4],     
                    JobPosition: updatedValues[5],
                    WorkShift: updatedValues[6], 
                    SystemRole: updatedValues[9], 
                    Login: updatedValues[10]     
                    //PasswordHash: updatedValues[11] 
                })
            })
                .then(response => {
                    if (response.ok) {
                    } else {
                        throw new Error("Ошибка обновления данных.");
                    }
                })
                .catch(error => alert(error.message));

            // Возвращаем кнопку к состоянию "Изменить"
            button.textContent = "Изменить";
            button.onclick = () => editRow(button);
        }

    </script>

</body>
</html>
