                    <option value=3>По отчеству</option>
                    <option value=4>Пол</option>
                    <option value=5>Почта</option>
                    <option value=6>Должность</option>
                    <option value=7>Рабочая смена</option>
                    <option value=8>Начало работы</option>
                    <option value=9>Конец работы</option>
                    <option value=10>Системная роль</option>
                    <option value=11>Логин</option>

